%header#header_blog.header_blog

	%h1.visuallyhidden March&eacute; Saint Charles Market

	.wrap_logo-wordmark
		.wrap_svg.wrap_logo
			%svg.logo_stc-angel.svg_inline{:viewBox => "0 0 206 134"}
				%use{"xlink:href" => "#logo_stc-angel"}
		.wrap_svg.wrap_wordmark
			%svg.logo_stc-wordmark.svg_inline{:viewBox => "0 0 272 183"}
				%use{"xlink:href" => "#logo_stc-wordmark"}
		.wrap_svg.wrap_txt-blog
			%svg.txt_blog.svg_inline{:viewBox => "0 0 82 43"}
				%use{"xlink:href" => "#txt_blog"}

	.wrap_pos-abs{"data-container" => "width_1380"}

		%a.link_updates.modal_open{:href => "#mailchimp", :title => "Get monthly updates"}
			.wrap_centre
				.wrap_svg.wrap_stc-key
					%svg.logo_stc-key{:viewBox => "0 0 155 64"}
						%use{"xlink:href" => "#logo_stc-key"}
				%span.wrap_txt Get monthly updates!

		%nav.nav_social
			%ul
				%li.social_twitter
					%a.wrap_svg{:href => "https://twitter.com/modboxottawa", :title => "Follow us on Twitter", :target => "_blank"}
						%svg.social_twitter{:viewBox => "0 0 64 64"}
							%use{"xlink:href" => "#social_twitter"}
				%li.social_facebook
					%a.wrap_svg{:href => "https://www.facebook.com/modboxottawa", :title => "Like us on Facebook", :target => "_blank"}
						%svg.social_facebook{:viewBox => "0 0 32 64"}
							%use{"xlink:href" => "#social_facebook"}
				%li.social_instagram
					%a.wrap_svg{:href => "https://instagram.com/stcharlesmarket", :title => "See us on Instagram", :target => "_blank"}
						%svg.social_instagram{:viewBox => "0 0 64 64"}
							%use{"xlink:href" => "#social_instagram"}
				%li.social_modbox
					%a.wrap_svg{:href => "http://modbox.ca/", :title => "Visit Modbox.ca", :target => "_blank"}
						%svg.logo_modbox{:viewBox => "0 0 61 64"}
							%use{"xlink:href" => "#logo_modbox"}

	%nav#nav_blog.nav_blog
		%ul{"data-container" => "width_1380"}
			%li.link_top
				%a{:href => "#header_blog", :title => "Back to top", "data-scroll" => true} Back to top
			%li.link_home
				%a.button.btn_brd.brd_navy{:href => "index.html", :title => "St. Charles Market website"} St. Charles Market website